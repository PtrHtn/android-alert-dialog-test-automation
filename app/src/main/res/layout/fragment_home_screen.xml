<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeScreenFragment">
    <LinearLayout
        android:id="@+id/home_screen_radio_buttons_layout"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_screen_radio_buttons_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="@string/radio_buttons"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/home_screen_radio_buttons_description_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/radio_buttons_description"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_screen_radio_button_text_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:text="@string/radio_button"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/home_screen_radio_buttons_value_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>